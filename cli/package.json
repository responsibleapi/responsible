{
  "name": "responsible",
  "version": "0.0.1",
  "license": "MIT",
  "bin": "dist/index.js",
  "dependencies": {
    "arg": "^5.0.2"
  },
  "devDependencies": {
    "pkg": "^5.8.0"
  },
  "scripts": {
    "esb": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --target=node18 --minify",
    "build": "yarn esb && pkg package.json",
    "start": "yarn esb && node dist/index.js"
  },
  "pkg": {
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64"
    ],
    "outputPath": "dist/"
  }
}
