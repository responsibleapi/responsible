{
  "name": "@responsible/cli",
  "version": "0.2.1",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "responsible": "bin.mjs"
  },
  "files": [
    "dist/**/*",
    "bin.mjs"
  ],
  "scripts": {
    "bld": "bun bundle.ts",
    "clean": "rm -rf dist/",
    "lint": "eslint src/ --fix",
    "start": "bun bld && bun bin.mjs ../examples/listenbox.kdl | pbcopy",
    "start:watch": "bun bld && bun bin.mjs -w -o dist/openapi.json ../examples/listenbox.kdl",
    "tst": "bun test",
    "preversion": "bun test",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "chokidar": "^3.5.3"
  }
}
