{
  "name": "@responsible/remix",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "clean": "rm -rf .cache/ app/styles/ function/ public/build/",
    "deploy": "cross-env NODE_ENV=production wrangler pages publish ./public --commit-dirty=true",
    "dev": "yarn build && run-p \"dev:*\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "start": "cross-env NODE_ENV=production yarn dev:wrangler",
    "lint": "eslint app/ --fix"
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "^5.30.5"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.14",
    "@remix-run/cloudflare": "^1.7.6",
    "@remix-run/cloudflare-pages": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "@uiw/react-codemirror": "^4.15.1",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@tailwindcss/forms": "^0.5.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "wrangler": "^2.2.1"
  },
  "engines": {
    "node": ">=16.13"
  }
}
