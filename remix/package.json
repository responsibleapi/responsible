{
  "name": "@responsible/remix",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "clean": "rm -rf .cache/ functions/ public/build/",
    "cleanDeploy": "yarn clean && yarn build && yarn deploy",
    "deploy": "wrangler pages publish ./public --commit-dirty=true",
    "dev": "remix build && concurrently \"yarn:dev:*\"",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public --live-reload --local --compatibility-date=2023-03-19",
    "lint": "eslint app/ --fix"
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "^5.30.5"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.14",
    "@remix-run/cloudflare": "^1.14.3",
    "@remix-run/cloudflare-pages": "^1.14.3",
    "@remix-run/react": "^1.14.3",
    "clsx": "^1.2.1",
    "highlight.js": "^11.7.0",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simple-code-editor": "^0.13.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.14.3",
    "@remix-run/eslint-config": "^1.14.3",
    "@tailwindcss/forms": "^0.5.3",
    "@types/react": "^18.0.32",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.19",
    "react-refresh": "^0.14.0",
    "tailwindcss": "^3.2.4",
    "wrangler": "^2.12.3"
  },
  "engines": {
    "node": ">=16.13"
  }
}
